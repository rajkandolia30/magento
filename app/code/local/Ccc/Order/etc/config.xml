<?xml version="1.0" encoding="UTF-8"?>
<config>	
	<modules>
		<Ccc_Order>
			<version>8.0.0</version>
		</Ccc_Order>
	</modules>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<ccc_order>Ccc_Order</ccc_order>
					</modules>
				</args>
			</adminhtml>			
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<order>
					<file>order.xml</file>
				</order>
			</updates>
		</layout>
		<menu>
			<order>
				<title>Order System</title>
				<sort_order>160</sort_order>
				<children>
					<order>
						<title>orders</title>
						<sort_order>1</sort_order>
						<action>*/adminhtml_order/index</action>
					</order>
				</children>
			</order>
		</menu>
	</adminhtml>
	<global>
		<blocks>
			<order>
				<class>Ccc_Order_Block</class>
			</order>
		</blocks>
		<models>
			<customer>
				<rewrite>
					<customer>Ccc_Order_Model_Customer</customer>
				</rewrite>
			</customer>
			<order>
				<class>Ccc_Order_Model</class>
				<resourceModel>Ccc_Order_Resource</resourceModel>
			</order>
			<Ccc_Order_Resource>
				<class>Ccc_Order_Model_Resource</class>
				<entities>
					<cart>
						<table>ccc_cart</table>
					</cart>
					<cart_address>
						<table>ccc_cart_address</table>
					</cart_address>
					<cart_item>
						<table>ccc_cart_item</table>
					</cart_item>
					<order>
						<table>ccc_order</table>
					</order>
					<order_address>
						<table>ccc_order_address</table>
					</order_address>
					<order_item>
						<table>ccc_order_item</table>
					</order_item>
				</entities>
			</Ccc_Order_Resource>
		</models>
		<resources>
			<order_setup>
				<setup>
					<module>Ccc_Order</module>
					<class>Ccc_Order_Model_Resource_Setup</class>
				</setup>
			</order_setup>
		</resources>
		<helpers>
			<order>
				<class>Ccc_Order_Helper</class>
			</order>
		</helpers>
	</global>
</config>